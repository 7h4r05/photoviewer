<?xml version='1.0' encoding='utf-8' ?>
<plugin id="com.speryans.PhotoViewer" version="0.1" xmlns="http://apache.org/cordova/ns/plugins/1.0" xmlns:android="http://schemas.android.com/apk/res/android">
	<name>PhotoViewer</name>
	<js-module name="PhotoViewer" src="www/PhotoViewer.js">
		<clobbers target="cordova.plugins.PhotoViewer" />
	</js-module>
	<platform name="android">
		<config-file parent="/*" target="res/xml/config.xml">
			<feature name="PhotoViewer">
				<param name="android-package" value="com.speryans.PhotoViewer.PhotoViewer" />
			</feature>
		</config-file>
		<config-file parent="/*" target="AndroidManifest.xml" />
		<source-file src="src/android/PhotoViewer.java" target-dir="src/com/speryans/PhotoViewer/PhotoViewer" />
		<source-file src="src/android/PhotoActivity.java" target-dir="src/com/speryans/PhotoViewer/PhotoActivity" />
		<source-file src="src/android/helpers/ImageLoader.java" target-dir="src/com/speryans/PhotoViewer/helpers/ImageLoader" />
		<source-file src="src/android/helpers/Utils.java" target-dir="src/com/speryans/PhotoViewer/helpers/Utils" />
		
		<source-file src="src/android/layout/activity_photo.xml" target-dir="res/layout/activity_photo" />
		
		<framework src="src/android/PhotoView" custom="true" />
	</platform>
	<platform name="ios">
		<config-file parent="/*" target="config.xml">
			<feature name="PhotoViewer">
				<param name="ios-package" value="PhotoViewer" />
			</feature>
		</config-file>
		<source-file src="src/ios/PhotoViewer.m" />
		
		<source-file src="src/ios/FSImageViewer/libPods.a" framework="true" autogen='true' />
		<source-file src="src/ios/FSImageViewer/libPods-AFNetworking.a" framework="true" autogen='true' />
		<source-file src="src/ios/FSImageViewer/libPods-EGOCache.a" framework="true" autogen='true' />
		<source-file src="src/ios/FSImageViewer/libFSImageViewer.a" framework="true" autogen='true' />
		
		<header-file src='src/ios/FSImageViewer/FSBasicImage.h' autogen='true'/>
		<header-file src='src/ios/FSImageViewer/FSBasicImageSource.h' autogen='true'/>
		<header-file src='src/ios/FSImageViewer/FSImage.h' autogen='true'/>
		<header-file src='src/ios/FSImageViewer/FSImageLoader.h' autogen='true'/>
		<header-file src='src/ios/FSImageViewer/FSImageScrollView.h' autogen='true'/>
		<header-file src='src/ios/FSImageViewer/FSImageSource.h' autogen='true'/>
		<header-file src='src/ios/FSImageViewer/FSImageTitleView.h' autogen='true'/>
		<header-file src='src/ios/FSImageViewer/FSImageView.h' autogen='true'/>
		<header-file src='src/ios/FSImageViewer/FSImageViewer.h' autogen='true'/>
		<header-file src='src/ios/FSImageViewer/FSImageViewerViewController.h' autogen='true'/>
		<header-file src='src/ios/FSImageViewer/FSPlaceholderImages.h' autogen='true'/>
		<header-file src='src/ios/FSImageViewer/FSTitleView.h' autogen='true'/>
		
		<framework src="CFNetwork.framework" />
		<framework src="Security.framework" />
	</platform>
</plugin>